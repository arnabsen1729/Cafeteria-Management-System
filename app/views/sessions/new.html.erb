<section class="container mt-5 mb-5">
  <div class="text-center">
    <img class="mb-4" src="<%= asset_path("icon.svg") %>" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>
  </div>
  <div class="col-lg-5 col-md-8 mx-auto">
    <%= form_with url: sessions_path, method: :post do |form| %>
      <p class="text-muted mt-1 mb-0">Email Address</p>
      <%= form.email_field :email, class: "form-control" %>

      <p class="text-muted mt-1 mb-0">Password</p>
      <%= form.password_field :password, class: "form-control" %>
      <br>

      <div>
        <%= submit_tag "Sign In", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</section>
